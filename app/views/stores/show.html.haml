%body
  #news.big-bg
    %header.page-header.wrapper
      %h1
        = link_to root_path do
          %img.logo{:alt => "WCBカフェホーム", :src => "/assets/icon.takulog3.png"}/
      %nav
        %ul.main-nav
          %li
            = link_to "新規投稿", new_store_path
          %li
            = link_to "Menu", stores_path 
          %li
            - if user_signed_in? && current_user.id == @stores.user_id
              = link_to "編集", edit_store_path(@stores.id)
            %li
              = link_to "削除", store_path(@stores.id), method: :delete
          %li
            - if user_signed_in?
              = link_to "signout", destroy_user_session_path, method: :delete, class: "signout-btn"
    .wrapper
      %h2.page-title Details
    / /.wrapper
  / /#home
  .news-contents.wrapper
    %article
      %header.post-info
        %h2.post-title 
          = @stores.name
        %p.post-cat 
          = @stores.address
      %img{:alt => "店内の様子", :src => @stores.image}/
      
      %p
        = @stores.text
  %footer
    .wrapper
      %p
        %small © 2020 takulog
